<div class="col-md-4 mt-md-0 mt-4">
  <%= link_to renter_order_path(order), class: "text-decoration-none" do %>
    <div class="card shadow-lg move-on-hover min-height-160">
      <%= image_tag 'invocie1', class: "w-100 m-auto" %>
    </div>
    <div class="mt-2 ms-2">
      <h6 class="mb-0"><%= order.created_at.strftime("%B") %></h6>
      <% if order.status.paid? %>
        <p class="text-secondary text-sm text-success">Paid</p>
      <% else %>
        <p class="text-secondary text-sm text-danger">Unpaid</p>
      <% end %>
    </div>
  <% end %>
</div>

<section class="my-3 py-3">
  <div class="container mt-sm-5 mt-3">
    <div class="row">
      <div class="col-lg-3">
        <div class="position-sticky pb-lg-5 pb-3 mt-lg-0 mt-5 ps-2" style="top: 100px">
          <h3>Device</h3>
          <h6 class="text-secondary font-weight-normal pe-3">All devices and their status are displayed here</h6>
        </div>
      </div>
      <div class="col-lg-9 devices-container">
        <% if @devices.present? %>
          <%= render partial: "renter/home/device", collection: @devices, as: :device %>
        <% end %>
      </div>
    </div>
    <div class="row pt-lg-6">
      <div class="col-lg-3">
        <div class="position-sticky pb-lg-5 pb-3 mt-lg-0 mt-5 ps-2" style="top: 100px">
          <h3>Receipt</h3>
          <h6 class="text-secondary font-weight-normal pe-3">The room bill will be automatically sent to you on the 1st of each month. Please pay it!</h6>
        </div>
      </div>
      <div class="col-lg-9">
        <div class="row mt-3">
          <div class="col-md-4">
            <a href="">
              <div class="card shadow-lg move-on-hover min-height-160">
                <%= image_tag 'invocie1', class: "w-100 m-auto" %>
              </div>
              <div class="mt-2 ms-2">
                <h6 class="mb-0">September</h6>
                <p class="text-secondary text-sm">Paid</p>
              </div>
            </a>
          </div>
          <div class="col-md-4 mt-md-0 mt-4">
            <a href="">
              <div class="card shadow-lg move-on-hover min-height-160">
                <%= image_tag 'invocie1', class: "w-100 m-auto" %>
              </div>
              <div class="mt-2 ms-2">
                <h6 class="mb-0">October</h6>
                <p class="text-secondary text-sm">Paid</p>
              </div>
            </a>
          </div>
          <div class="col-md-4 mt-md-0 mt-4">
            <a href="">
              <div class="card shadow-lg move-on-hover min-height-160">
                <%= image_tag 'invocie1', class: "w-100 m-auto" %>
              </div>
              <div class="mt-2 ms-2">
                <h6 class="mb-0">November</h6>
                <p class="text-secondary text-sm">Unpaid</p>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<tr>
  <th scope="row">
    <div class="media align-items-center">
      <div class="media-body">
        <span class="name mb-0 text-sm"><%= Room.find(order.room_id).name %></span>
      </div>
    </div>
  </th>
  <td class="name text-sm text-capitalize"><%= order.created_at.strftime("%B, %Y") %></td>
  <td>
    <span class="badge badge-dot mr-4">
      <span class="status text-uppercase"><%= order.sum %></span>
    </span>
  </td>
  <td>
    <span class="badge badge-dot mr-4">
      <span class="status text-uppercase"><%= order.status %></span>
    </span>
  </td>
  <td>
    <span class="badge badge-dot mr-4">
    <% if order.status.paid? %>
      <span class="status"><%= order.pay_date.strftime('%d/%m/%Y') %></span>
    <% end %>
    </span>
  </td>
</tr>

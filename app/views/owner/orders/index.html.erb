<!-- Header -->
<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
              <li class="breadcrumb-item"><a href="#">Dashboards</a></li>
              <li class="breadcrumb-item active" aria-current="page">Receipts</li>
            </ol>
          </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
          <%#= link_to "New", new_owner_order_path, class: "btn btn-sm btn-neutral" %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Header -->
<div class="container-fluid mt--6">
  <div class="card mb-4">
    <!-- Card header -->
    <div class="card-header">
      <h3 class="mb-0"><%= @apartment.name if @apartment.present? %></h3>
    </div>
    <!-- Card body -->
    <div class="card-body">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="table-responsive">
              <table class="table align-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">Room</th>
                    <th scope="col">Month</th>
                    <th scope="col">Sum</th>
                    <th scope="col">Status</th>
                    <th scope="col">Paydate</th>
                  </tr>
                </thead>
                <tbody class="list">
                  <% if @orders.present? %>
                    <%= render partial: "owner/orders/order", collection: @orders, as: :order %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Header -->
<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
              <li class="breadcrumb-item"><a href="#">Dashboards</a></li>
              <li class="breadcrumb-item active" aria-current="page">Services</li>
            </ol>
          </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
          <%= link_to "New", new_owner_service_path, class: "btn btn-sm btn-neutral" %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Header -->
<div class="container-fluid mt--6">
  <div class="card mb-4">
    <div class="card-header">
      <h3 class="mb-0"><%= @service.name %></h3>
    </div>
    <!-- Card body -->
    <div class="card-body">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-md-7">
                  <div class="form-group">
                    <%= simple_form_for @service, url: owner_service_path(@service.id), method: :PATCH do |f| %>
                      <div class="row">
                        <div class="col-md">
                          <div class="form-group">
                            <%= f.label :Name, class: "form-control-label" %>
                            <%= f.text_field :name, class: "form-control" %>
                            <%= f.error :name, class: "text-danger" %>
                          </div>
                          <div class="form-group">
                            <%= f.label "Service type", class: "form-control-label" %>
                            <%= f.text_field :service_type, class: "form-control" %>
                            <%= f.error :service_type, class: "text-danger" %>
                          </div>
                          <div class="form-group">
                            <%= f.label :Price, class: "form-control-label" %>
                            <%= f.text_field :price, class: "form-control", type: "number", min:"1" %>
                            <%= f.error :price, class: "text-danger" %>
                          </div>
                          <div class="form-group">
                            <%= f.label :Unit, class: "form-control-label" %>
                            <%= f.text_field :unit, class: "form-control" %>
                            <%= f.error :unit, class: "text-danger" %>
                          </div>
                          <%= f.submit :Update, class: "btn btn-primary" %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="bg-custom-col-md"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
